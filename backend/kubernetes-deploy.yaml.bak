apiVersion: apps/v1
kind: Deployment
metadata:
  name: minima-backend
  labels:
    app: minima-backend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: minima-backend
  template:
    metadata:
      labels:
        app: minima-backend
    spec:
      containers:
      - name: minima-backend
        image: minima-backend:latest
        imagePullPolicy: Never  # Use the local image, don't try to pull from registry
        ports:
        - containerPort: 8000
        env:
        - name: OPENAI_API_KEY
          value: "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"  # Replace with your actual API key or use a secret
---
apiVersion: v1
kind: Service
metadata:
  name: minima-backend
spec:
  selector:
    app: minima-backend
  ports:
  - port: 8000
    targetPort: 8000
  type: NodePort  # This makes the service accessible outside the cluster 